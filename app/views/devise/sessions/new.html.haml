.container
  .form-signin
    = form_for resource, as: resource_name, url: session_path(resource_name) do |f|
      %h2.form-signin-heading Please sign in
      = f.email_field :email, autofocus: true, placeholder:  'Email address', id: 'inputEmail', class: "form-control"
      = f.password_field :password, autocomplete: 'off', placeholder: 'Password', id: 'inputPassword', class: 'form-control'
      .checkbox
        - if devise_mapping.rememberable?
          %label
            = f.check_box :remember_me
            Remember me
      = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'
    .text-center
      %p
        Not a member?
        = link_to 'Sign up now', new_user_registration_path
