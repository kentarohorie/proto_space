- if current_user.errors.any?
  #error_explanation
    %ul
    = current_user.errors.full_message.each do |msg|
      %li
        = msg

.container.user-new
  = form_for current_user do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, placeholder: 'Username'
            .user-image.col-md-2{ style: "background-image: url(#{current_user.avatar}) ;" }
              = f.button 'Change image', class: 'btn btn-primary'
              = f.file_field :avatar
          = f.email_field :email, autofocus: true, class: 'user-email'
          = f.password_field :password, autocomplete: 'off', class: 'user-password', placeholder: 'Password'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: 'Member'
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, placeholder: 'Profile', size: '30x4'
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, placeholder: 'Works', size: '30x4'
      .row.text-center.user-btn
        = f.submit ['SAVE'], class: 'btn btn-lg btn-primary btn-block'
