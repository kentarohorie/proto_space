.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to user_path(@user) do
            %img.media-object{ alt: "64x64", data: { holder: { rendered: :true } }, data: { src: "holder.js/64x64" }, src: @user.avatar, style: "width: 64px; height: 64px;" }/
        .media-body
          %h4#top-aligned-media.media-heading
            = @proto.title
          .proto-user
            = link_to 'by ' + @user.username, user_path(@user)
            %span.degree
              = @user.works

    .col-md-6.text-right
      = render partial: 'likes/like'
  .row
    .col-md-9
      = image_tag(@proto.get_main_thumbnail.image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @proto.get_sub_thumbnails.each do |thumbnail|
          %li.list-group-item
            = image_tag(thumbnail.image, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @proto.catchcopy
    .col-md-6
      %h4 Concept
      %p
        = @proto.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          = link_to 'iPad', '#', class: 'btn btn-default'
        %li
          = link_to 'wireframe', '#', class: 'btn btn-default'
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num
        (
        = @comments.count
        )
    .col-md-8
      .media
        = render partial: 'prototypes/comments/comment', collection: @comments
      - if user_signed_in?
        = form_for [@proto, @comment], remote: true do |f|
          %h4
            Write a comment
          .row
            .form-group.col-md-10
              = f.text_area :comment, placeholder: 'Your comments', size: '30x3', class: 'form-control'
            .form-group.col-md-2
              = f.submit ['Comment'], class: 'btn btn-primary'

