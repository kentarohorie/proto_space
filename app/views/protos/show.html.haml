.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to user_path(@user) do
            %img.media-object{ alt: "64x64", data: { holder: { rendered: :true } }, data: { src: "holder.js/64x64" }, src: @user.avatar, style: "width: 64px; height: 64px;" }/
        .media-body
          %h4#top-aligned-media.media-heading
            = @proto.title
          .proto-user
            = link_to 'by ' + @user.username, user_path(@user)
            %span.degree
              = @user.works

    .col-md-6.text-right
      - if Like.is_exist_like(current_user, @proto)
        = link_to proto_like_path(@proto, Like.get_like(current_user, @proto)), method: :patch, remote: true do
          %button.btn.btn-default{ style: 'width: 110px; height: 62px;'}
            = image_tag("save_image.jpg") #likeのインスタンスいらなくね？
            Like
            %span.num 20
      - else
        = link_to proto_likes_path(@proto), method: :post, remote: true do
          %button.btn.btn-default{ style: 'width: 110px; height: 62px;'}
            = image_tag("icon_heart.svg")
            Like
            %span.num 19
  .row
    .col-md-9
      = image_tag(@thumbnails[0].image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @proto.get_sub_thumbnails.each do |thumbnail|
          %li.list-group-item
            = image_tag(thumbnail.image, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @proto.catchcopy
    .col-md-6
      %h4 Concept
      %p
        = @proto.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          = link_to 'iPad', '#', class: 'btn btn-default'
        %li
          = link_to 'wireframe', '#', class: 'btn btn-default'
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num
        (
        = @comments.count
        )
    .col-md-8
      = render partial: 'comments/comment', collection: @comments
      = form_for [@proto, @comment], remote: true do |f|
        %h4
          Write a comment
        .row
          .form-group.col-md-10
            = f.text_area :comment, placeholder: 'Your comments', size: '30x3', class: 'form-control'
          .form-group.col-md-2
            = f.submit ['Comment'], class: 'btn btn-primary'

