.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{ role: "presentation" }
          = link_to 'Popular PROTO', root_path
        %li{ role: "presentation" }
          = link_to 'Newest PROTO', controller: 'protos', action: 'index', id: 'newest'
      = link_to tags_path do
        %button{ type: "button", class: "btn btn-default col-lg-1" } View TAGS

.container.proto-list
  .row
    = render partial: 'proto', collection: @protos

.text-center
  %ul.pagination
    %li.disabled
      = link_to '#', aria: { label: :Previous } do
        %span{ aria: { hidden: :true } } «
    %li.active
      = link_to '#' do
        1
        %span.sr-only (current)
    %li
      = link_to '#', aria: { label: :Next } do
        %span{ aria: { hidden: :true } } »
